{
  "name": "tps-base",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "shopify theme dev",
    "build": "echo \"No build step defined\"",
    "test": "playwright test",
    "test:visual": "playwright test --config=playwright.config.ts",
    "test:visual:update": "playwright test --config=playwright.config.ts --update-snapshots",
    "precommit": "lint-staged",
    "lint:js": "eslint --max-warnings=0 --ext .js,.ts,.tsx assets scripts src || true",
    "lint:hint": "hint http://127.0.0.1:9292 --telemetry=off",
    "lint:hint:preview": "hint 'https://f6d72e-0f.myshopify.com/?preview_theme_id=186613989724' --telemetry=off",
    "lhci": "lhci autorun",
    "lhci:preview": "lhci autorun --config=lighthouserc.preview.json --collect.url=$PREVIEW_URL --collect.startServerCommand='echo skip'",
    "theme-check": "bash scripts/theme_check.sh",
    "validate:hybrid": "node scripts/validate-hybrid.cjs",
    "check:predeploy": "npm run validate:hybrid && npm run theme-check",
    "lint:css": "stylelint \"**/*.{css,scss}\" --allow-empty-input --config .stylelintrc.cjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "assets/**/*.{css,scss}": "stylelint --fix --config .stylelintrc.cjs"
  },
  "devDependencies": {
    "@hint/configuration-web-recommended": "^8.2.24",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "clean-css-cli": "^5.6.3",
    "csso": "^5.0.5",
    "eslint": "^9.14.0",
    "hint": "^7.1.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "terser": "^5.44.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": ""
}
