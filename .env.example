SHOPIFY_FLAG_STORE=your-store.myshopify.com
SHOPIFY_CLI_THEME_TOKEN=xxxxxx

# ==========================================
# ANALYTICS & TRACKING CONFIGURATION
# ==========================================
# Copiez ce fichier en .env et remplissez vos vraies valeurs
# Le fichier .env ne sera pas commité dans Git (sécurité)

# Google Tag Manager
GTM_CONTAINER_ID=GTM-XXXXXXX

# Google Analytics 4 (fallback si pas de GTM)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Webmaster Tools Verification
GOOGLE_SITE_VERIFICATION=abcd123456789
AHREFS_SITE_VERIFICATION=xyz987654321

# Social Media Pixels
FACEBOOK_PIXEL_ID=123456789012345

# Security & Anti-Bot Protection
TURNSTILE_SITE_KEY=0x4AAAAAAAAAAAAAAAAAAAAAA
TURNSTILE_SECRET_KEY=0x4AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAaa
TURNSTILE_ENABLED=false
TURNSTILE_THEME=auto
TURNSTILE_SIZE=normal

# Sentry Error Monitoring
SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_ENVIRONMENT=production

# Development/Staging overrides
NODE_ENV=production
DEBUG_MODE=false
