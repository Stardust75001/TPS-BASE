# Example environment variables for local Shopify theme dev
# Copy to .env and replace placeholders; .env is gitignored.

# Your Shopify store subdomain (no https://)
SHOPIFY_FLAG_STORE=your-store.myshopify.com

# Theme Access password (from Shopify Admin > Apps and sales channels > Develop apps > Theme Access)
# DO NOT commit real tokens. Keep this file with placeholders only.
SHOPIFY_CLI_THEME_TOKEN=shptka_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional defaults
DEFAULT_THEME_ID=187147125084
DEFAULT_START_PORT=9292
