{
  "compilerOptions": {
    "checkJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": [],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["."]
  },
  "include": ["**/*", "types.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.*",
    "**/__tests__/**",
    "playwright-report",
    "test-results"
  ]
}
