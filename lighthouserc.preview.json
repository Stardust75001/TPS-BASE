{
  "ci": {
    "collect": {
      "url": [
        "$PREVIEW_URL"
      ],
      "startServerCommand": "echo 'skip local server'",
      "numberOfRuns": 1
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.4
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.7
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.7
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.8
          }
        ],
        "total-byte-weight": [
          "warn",
          {
            "minScore": 0.3
          }
        ],
        "unused-javascript": [
          "warn",
          {
            "maxLength": 10
          }
        ],
        "uses-responsive-images": [
          "warn",
          {
            "maxLength": 15
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
